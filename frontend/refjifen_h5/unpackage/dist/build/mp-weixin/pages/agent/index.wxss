.agent-container{min-height:100vh;background-color:#f5f7fa;padding-bottom:80px}.hero{background:linear-gradient(135deg,#07c160,#05a050);padding:60px 20px 80px;text-align:center;color:#fff;border-bottom-left-radius:30px;border-bottom-right-radius:30px}.logo-box{width:80px;height:80px;background:hsla(0,0%,100%,.2);border-radius:20px;margin:0 auto 20px;display:flex;align-items:center;justify-content:center;border:2px solid hsla(0,0%,100%,.3)}.logo-text{font-size:24px;font-weight:700;color:#fff}.hero-title{font-size:24px;font-weight:700;margin-bottom:10px;letter-spacing:1px}.hero-sub{font-size:14px;opacity:.9;letter-spacing:2px}.intro-card{background:#fff;margin:-40px 20px 20px;padding:30px 20px;border-radius:12px;box-shadow:0 4px 15px rgba(0,0,0,.05)}.section-title{font-size:18px;font-weight:700;color:#333;margin-bottom:20px;text-align:center;position:relative}.section-title::after{content:"";display:block;width:40px;height:3px;background:#07c160;margin:8px auto 0;border-radius:2px}.intro-text{font-size:15px;color:#666;line-height:1.8;margin-bottom:15px;text-align:justify}.action-area{padding:20px 40px}.action-btn{background:#fff;color:#07c160;border:1px solid #07c160;border-radius:25px;font-size:16px}.action-btn:active{background:#f0fff5}