.container{padding:10px;background:#f5f5f5;min-height:100vh;box-sizing:border-box}.search-bar{position:-webkit-sticky;position:sticky;top:0;z-index:99;background:#fff;margin:-10px -10px 10px -10px;padding:10px 15px;box-shadow:0 2px 5px rgba(0,0,0,.05)}.search-box{background:#f0f0f0;border-radius:20px;height:35px;display:flex;align-items:center;padding:0 15px}.icon-search{color:#999;margin-right:5px}.search-box input{flex:1;font-size:14px}.product-grid{display:flex;flex-wrap:wrap;justify-content:space-between}.product-item{width:48.5%;background:#fff;border-radius:8px;margin-bottom:10px;overflow:hidden;border:1px solid #f9f9f9}.p-img{width:100%;height:150px;background:#f5f5f5}.p-info{padding:8px}.p-title{font-size:14px;color:#333;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;margin-bottom:5px;font-weight:700}.p-meta{display:flex;justify-content:space-between;align-items:flex-end}.p-price{font-size:16px;font-weight:700;line-height:1}.p-sales{font-size:10px;color:#bbb}.p-unit{font-size:12px;color:#ccc;font-weight:400;margin-left:1px}.empty-state{display:flex;flex-direction:column;align-items:center;justify-content:center;padding-top:100px}