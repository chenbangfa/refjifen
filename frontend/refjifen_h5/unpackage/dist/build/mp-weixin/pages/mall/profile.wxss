.container{position:relative;padding:10px;padding-bottom:80px;min-height:100vh;background:linear-gradient(135deg,#00bcd4,#2196f3);overflow:hidden}.bg-circle{position:absolute;border-radius:50%;opacity:.2;z-index:0}.circle-1{width:200px;height:200px;background:#00e5ff;top:-50px;right:-50px;-webkit-filter:blur(40px);filter:blur(40px)}.circle-2{width:150px;height:150px;background:#2979ff;top:50px;left:-30px;-webkit-filter:blur(30px);filter:blur(30px)}.user-header{position:relative;z-index:1;padding:30px 15px 20px;display:flex;align-items:center;justify-content:space-between;margin-bottom:5px}.avatar-area{display:flex;align-items:center}.avatar-wrapper{width:76px;height:76px;box-sizing:border-box;padding:4px;background:#fff;border-radius:50%;border:2px solid rgba(0,229,255,.6);margin-right:15px;box-shadow:0 0 15px rgba(0,229,255,.3);display:flex;align-items:center;justify-content:center}.avatar{width:60px;height:60px;border-radius:50%;background:#eee;display:block}.nickname{font-size:20px;font-weight:700;margin-bottom:5px;color:#004d40;letter-spacing:.5px}.uid{font-size:13px;color:#fff;display:flex;align-items:center;opacity:.8}.tag{background:rgba(0,229,255,.2);color:#006064;padding:1px 6px;border-radius:10px;font-size:10px;margin-left:8px;border:1px solid rgba(0,96,100,.1)}.level{font-size:12px;color:#ff6d00;margin-top:4px;font-weight:700}.switch-btn-transparent{display:flex;flex-direction:column;align-items:center;justify-content:center;font-size:12px;color:#006064;opacity:.9;background:hsla(0,0%,100%,.25);padding:6px 10px;border-radius:12px;-webkit-backdrop-filter:blur(5px);backdrop-filter:blur(5px)}.section{background:#fff;padding:15px;border-radius:12px;margin-bottom:15px;box-shadow:0 2px 10px rgba(0,0,0,.05)}.section-title{font-size:16px;font-weight:700;margin-bottom:15px;border-left:3px solid #07c160;padding-left:10px;color:#333}.asset-grid{display:flex;justify-content:space-between}.asset-item{text-align:center;flex:1}.asset-value{font-size:20px;font-weight:700;color:#333;margin-bottom:5px}.asset-label{font-size:12px;color:#888}.menu-list{background:#fff;border-radius:12px;overflow:hidden;box-shadow:0 2px 10px rgba(0,0,0,.05)}.menu-item{padding:15px;display:flex;justify-content:space-between;align-items:center;border-bottom:1px solid #f5f5f5;font-size:16px;color:#333}.menu-item:last-child{border-bottom:none}.menu-item:active{background:#f9f9f9}.arrow{color:#ccc}.menu-left{display:flex;align-items:center}.menu-right{display:flex;align-items:center;color:#999;font-size:14px}.menu-icon{font-size:20px;margin-right:10px}.badge-num{position:absolute;top:-5px;right:15px;background:#ff4d4f;color:#fff;font-size:10px;padding:0 4px;border-radius:10px;min-width:14px;text-align:center;line-height:14px;height:14px}.switch-link{text-align:center;margin-top:30px;margin-bottom:30px;color:#fff;font-size:14px}