<view class="container"><image class="p-image" src="{{product.image?$root.g0[0]:''}}" mode="aspectFill"></image><view class="info-card"><view class="price-row"><block wx:if="{{product.zone=='A'}}"><view class="price">¥<text class="num">{{$root.m0}}</text><text class="p-unit">{{"/"+(product.unit||'件')}}</text></view></block><block wx:else><view class="price"><text class="num">{{$root.m1}}</text><text class="p-unit" style="font-size:12px;color:#ccc;font-weight:normal;">{{"/"+(product.unit||'件')}}</text> 券</view></block><view class="stock">{{"库存: "+product.stock}}</view></view><view class="title">{{product.title}}</view><view class="sales">{{"已售 "+product.sales+product.unit}}</view></view><view class="detail-card"><view class="section-title">商品详情</view><rich-text nodes="{{product.description||'<p>暂无详情</p>'}}"></rich-text></view><view class="bottom-bar"><view data-event-opts="{{[['tap',[['addToCart',['$event']]]]]}}" class="bar-btn cart" bindtap="__e">加入购物车</view><view data-event-opts="{{[['tap',[['buyNow',['$event']]]]]}}" class="bar-btn buy" bindtap="__e">立即购买</view></view></view>