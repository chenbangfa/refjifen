.container{min-height:100vh;background:#f5f7fa;position:relative;overflow:hidden}.header-bg{position:absolute;top:0;left:0;width:100%;height:240px;background:linear-gradient(135deg,#07c160,#36cb98);border-radius:0 0 30% 30%;z-index:1}.content-wrapper{position:relative;z-index:2;padding:20px 10px}.logo-area{display:flex;flex-direction:column;align-items:center;margin-bottom:30px;margin-top:10px}.logo-box{width:70px;height:70px;background:hsla(0,0%,100%,.2);border-radius:20px;display:flex;align-items:center;justify-content:center;-webkit-backdrop-filter:blur(5px);backdrop-filter:blur(5px);margin-bottom:15px;border:1px solid hsla(0,0%,100%,.3)}.app-name{font-size:26px;font-weight:700;color:#fff;text-shadow:0 2px 4px rgba(0,0,0,.1)}.app-slogan{font-size:14px;color:hsla(0,0%,100%,.9);margin-top:5px}.form-card{background:#fff;border-radius:16px;padding:40px 25px;box-shadow:0 10px 30px rgba(0,0,0,.08)}.input-item{display:flex;align-items:center;border-bottom:1px solid #f0f0f0;transition:.3s}.input-item:focus-within{border-bottom-color:#07c160}.icon-box{margin-right:15px;display:flex;align-items:center;opacity:.6}.input-item:focus-within .icon-box{opacity:1;color:#07c160}.input-item:focus-within .icon-box path{fill:#07c160}.input{flex:1;font-size:16px;color:#333;height:30px}.placeholder{color:#ccc;font-size:14px}.login-btn{width:100%;height:48px;line-height:48px;background:linear-gradient(90deg,#07c160,#36cb98);color:#fff;font-size:16px;border-radius:24px;border:none;box-shadow:0 4px 12px rgba(7,193,96,.3);margin-top:10px}.login-btn:active{opacity:.9;-webkit-transform:scale(.98);transform:scale(.98)}.login-btn::after{border:none}.register-link{text-align:center;margin-top:25px;font-size:14px;color:#666}