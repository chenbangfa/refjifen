<view class="container"><view class="header-status"><view class="status-title">{{statusText}}</view><view class="status-desc">{{statusDesc}}</view></view><block wx:if="{{order.after_sales_info}}"><view class="card as-card" style="margin-top:-30px;position:relative;z-index:2;"><view class="as-title">售后进度</view><view class="info-row"><text class="label">售后状态</text><text class="value status-text">{{$root.m0}}</text></view><view class="info-row"><text class="label">售后类型</text><text class="value">{{order.after_sales_info.type==1?'仅退款':'退货退款'}}</text></view><view class="info-row"><text class="label">申请原因</text><text class="value">{{order.after_sales_info.reason}}</text></view><block wx:if="{{order.after_sales_info.admin_reply}}"><view class="info-row"><text class="label">商家回复</text><text class="value highlight">{{order.after_sales_info.admin_reply}}</text></view></block><block wx:if="{{order.after_sales_info.images}}"><view class="as-imgs"><block wx:for="{{$root.l0}}" wx:for-item="img" wx:for-index="i" wx:key="i"><image src="{{img}}" mode="aspectFill" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({img})}}" bindtap="__e"></image></block></view></block><block wx:if="{{order.after_sales_info.status==0}}"><view class="as-actions"><view data-event-opts="{{[['tap',[['cancelRefund',['$event']]]]]}}" class="btn outline small" bindtap="__e">取消售后</view></view></block></view></block><block wx:if="{{order.status>=2}}"><view class="card logistics-card" style="{{'margin-top:'+(order.after_sales_info?'10px':'-30px')+';'}}"><view class="l-icon"><text class="iconfont icon-delivery"></text></view><view class="l-info"><view class="l-company">{{"快递公司: "+(order.express_company||'未知')}}</view><view class="l-no">{{"快递单号: "+(order.tracking_number||'暂无')}}</view><block wx:if="{{order.delivery_time}}"><view class="l-time">{{"发货时间: "+order.delivery_time}}</view></block></view></view></block><view class="card address-card"><view class="a-icon"><text class="iconfont icon-location"></text></view><view class="a-info"><view class="user-row"><text class="name">{{address.name}}</text><text class="mobile">{{address.mobile}}</text></view><view class="addr-text">{{''+(address.province||'')+" "+(address.city||'')+" "+(address.district||'')+" "+(address.detail||address.address||'')+''}}</view></view></view><view class="card goods-card"><block wx:for="{{$root.l1}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-item"><image class="g-img" src="{{item.g0[0]}}" mode="aspectFill"></image><view class="g-info"><view class="g-title">{{item.$orig.title}}</view><view class="g-meta"><block wx:if="{{order.pay_type=='balance'}}"><text class="g-price">{{"¥"+item.m1}}</text></block><block wx:else><text class="g-price">{{item.m2+"券"}}</text></block><text class="g-num">{{"x"+item.$orig.num}}</text></view></view></view></block><view class="goods-total"><text>实付款:</text><block wx:if="{{order.pay_type=='balance'}}"><text class="price-big">{{"¥"+order.total_price}}</text></block><block wx:else><text class="price-big">{{order.total_price+"券"}}</text></block></view></view><view class="card order-info"><view class="info-row"><text class="label">订单编号</text><text class="value">{{order.order_sn}}</text></view><view class="info-row"><text class="label">下单时间</text><text class="value">{{order.created_at}}</text></view><block wx:if="{{order.pay_time}}"><view class="info-row"><text class="label">支付时间</text><text class="value">{{order.pay_time}}</text></view></block><block wx:if="{{order.remark}}"><view class="info-row"><text class="label">买家留言</text><text class="value">{{order.remark}}</text></view></block></view><block wx:if="{{order.status==0||order.status==2}}"><view class="footer-actions"><block wx:if="{{order.status==0}}"><view data-event-opts="{{[['tap',[['cancelOrder',['$event']]]]]}}" class="btn outline" bindtap="__e">取消订单</view></block><block wx:if="{{order.status==0}}"><view data-event-opts="{{[['tap',[['payOrder',['$event']]]]]}}" class="btn primary" bindtap="__e">立即支付</view></block><block wx:if="{{order.status==2}}"><view data-event-opts="{{[['tap',[['confirmReceipt',['$event']]]]]}}" class="btn primary" bindtap="__e">确认收货</view></block></view></block></view>